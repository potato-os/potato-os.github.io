using gui;
using Colour from graphics;

#var clicked = false;
var window = gui.Window();
window.title("My Custom Window");

var container = gui.FlexBox();
container
	~> .fill()
	~> .direction("horizontal")
	~> .gap(10)
	~> window.add_content();

	var new = gui.ColourRect().random().expand();
	container.add(new);

for i in [0..4] {
	print("Adding to container!");
	var new = gui.ColourRect().random();
	container.add(new);
}