using gui;
using Colour from graphics;

var window = gui.Window();
window.title("My Custom Window");

var scroll = gui.Scroll();
scroll
	~> .fill()
	~> .scrollbars("disabled", "auto")
	~> window.add_content();

var container = gui.Grid();
container
	~> .expand(true)
	~> .columns(3)
	~> .gap_h(10)
	~> .gap_v(10)
	~> .anchor_bottom(2.0)
	~> scroll.add();

for i in [1..12] {
	print("Adding to container!");
	var new = gui.ColourRect().random().expand(true);
	print(new);
	container.add(new);
}