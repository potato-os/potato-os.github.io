using gui;
using Colour from graphics;

var clicked = false;
var window = gui.Window();
window.title("My Custom Window");

var button = gui.Button();
button
	~> .fill()
	~> .text("Click Me!")
	~> .font_size(50)
	~> .on_click(button_click);
window.add_content(button);

function button_click() {
	clicked = not clicked;
	print("Clicked!");
	var c = Colour("#ff0000");
	var t = "Off";

	if clicked {
		c = Colour("#00ff00");
		t = "On";
	}
	button.colour(c).text(t);
}